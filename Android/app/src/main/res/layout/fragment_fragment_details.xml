<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.eaict.sleepqualitymeter.FragmentDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragDtlHeader"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="Total sleep time"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragDtlSleepTime"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center|start"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="Min heartbeat"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragDtlMinBeat"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center|start"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView36"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="Avg heartbeat"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragDtlAvgBeat"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center|start"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="Max heartbeat"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragDtlMaxBeat"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center|start"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="Avg temperature"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragDtlAvgTemp"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center|start"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="Avg humidity"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragDtlAvgHum"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center|start"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:text="Avg light"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragDtlAvgLight"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center|start"
                android:textStyle="bold|italic" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
